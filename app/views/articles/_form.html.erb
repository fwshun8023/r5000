<% form_url = article.persisted? ? edit_article_path(article) : articles_path %>
<%= form_for article, url: form_url do |f| %>
  <%= render 'shared/error_messages', target: @article %> 

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", rows: 15 %>
  </div>

  <div class="actions">
    <%= f.submit t('helpers.submit.submit', model: t("activerecord.models.article")), class: "btn  btn-default" %>
  </div>
<% end %>
