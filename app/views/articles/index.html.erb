<p id="notice"><%= notice %></p>

<h1>文章</h1>

<table class="table">
  <thead>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to '详细', article %></td>
        <td><%= link_to '编辑', edit_article_path(article) %></td>
        <td><%= link_to '删除', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

